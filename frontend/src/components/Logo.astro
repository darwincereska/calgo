---
interface Props {
  title: string;
  image: string;
  href: string;
}
const { title, image, href } = Astro.props;
---

<article>
  <a href={href} target="_blank">
    <img src={image} alt={title} />
  </a>
  <h2>{title}</h2>
</article>

<style>
  img {
    max-height: 200px;
  }
  article {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  a:hover {
    transform: scale(1.1);
    filter: brightness(1.2);
    transition: all 0.2s ease-in-out;
  }
</style>
